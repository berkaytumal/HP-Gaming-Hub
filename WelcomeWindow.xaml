<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="HP_Gaming_Hub.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>
    
    <Grid PointerPressed="Grid_PointerPressed" PointerMoved="Grid_PointerMoved" PointerReleased="Grid_PointerReleased" DoubleTapped="Grid_DoubleTapped">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="Transparent" Padding="30">
                <Grid x:Name="ContentGrid">
                
                <!-- Page 1: Welcome -->
                <StackPanel x:Name="Page1" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="1">
                    <StackPanel.RenderTransform>
                        <TranslateTransform X="0" Y="0"/>
                    </StackPanel.RenderTransform>
                     <Image Source="Assets/StoreLogo.scale-200.png" 
                           Width="80" 
                           Height="80" 
                           Margin="0,0,0,20"/>
                    <TextBlock Text="Welcome to HP Gaming Hub!" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="An open source alternative to Omen Gaming Hub" 
                               FontSize="18" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Page 2: Disclaimer -->
                <StackPanel x:Name="Page2" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="0">
                    <StackPanel.RenderTransform>
                        <TranslateTransform X="30" Y="0"/>
                    </StackPanel.RenderTransform>
                    <TextBlock Text="Important Disclaimer" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                    

                        <StackPanel>
                            <TextBlock Text="Early Development Software" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            
                            <TextBlock Text="This software is in very early development and should NOT be used as a daily driver. It may contain bugs, cause system instability, or potentially damage your hardware." 
                                       FontSize="16" 
                                       TextWrapping="Wrap"
                                       LineHeight="24"
                                       Margin="0,0,0,20"
                                       TextAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            
                            <TextBlock Text="Recommendations:" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"
                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            
                            <TextBlock Text="â€¢ Use only for testing purposes&#x0a;â€¢ Monitor temperatures closely during use&#x0a;â€¢ Close the application after testing&#x0a;â€¢ Keep original HP Omen software as backup&#x0a;â€¢ Report any issues on GitHub" 
                                       FontSize="16" 
                                       TextWrapping="Wrap"
                                       LineHeight="24"
                                       Margin="0,0,0,20"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            
                            <TextBlock Text="Use at your own risk!" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </StackPanel>
                </StackPanel>
                
                <!-- Page 3: Features -->
                <StackPanel x:Name="Page3" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="0">
                    <StackPanel.RenderTransform>
                        <TranslateTransform X="30" Y="0"/>
                    </StackPanel.RenderTransform>
                    <TextBlock Text="Here's what you can do!" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <StackPanel MaxWidth="700" HorizontalAlignment="Center">
                        <!-- Currently Available -->
                        <TextBlock Text="âœ… Currently Available" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"
                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                        <TextBlock Text="â€¢ Fan Control (Quiet, Auto, Max modes) with real-time temperature monitoring&#x0a;â€¢ System Monitoring with CPU/GPU tracking and customizable refresh intervals&#x0a;â€¢ Settings &amp; Customization with multiple backdrop options and persistent preferences" 
                                   FontSize="16" 
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   Margin="0,0,0,25"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        
                        <!-- Coming Soon -->
                        <TextBlock Text="ðŸš€ Coming Soon" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"
                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="â€¢ Custom Fan Curves with visual editor and multiple profiles&#x0a;â€¢ GPU Performance Control with power modes and TDP management&#x0a;â€¢ RGB Keyboard Lighting with full spectrum control and game integration&#x0a;â€¢ Quick Control Popup and system tray integration with hotkey support" 
                                   FontSize="16" 
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Page 4: Download Helper -->
                <StackPanel x:Name="Page4" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="0">
                    <StackPanel.RenderTransform>
                        <TranslateTransform X="30" Y="0"/>
                    </StackPanel.RenderTransform>
                    <TextBlock Text="We need a helper first" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="(Not optional)" 
                               FontSize="14" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                    
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            CornerRadius="8" 
                            Padding="20" 
                            MaxWidth="500">
                        <StackPanel>
                            <TextBlock Text="OmenMon Helper" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="We'll download the latest OmenMon from GitHub and extract the necessary files (OmenMon.exe and OmenMon.xml)." 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,20"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            
                            <StackPanel x:Name="DownloadButtonPanel" HorizontalAlignment="Center">
                                <Button x:Name="DownloadButton" 
                                        Content="Download OmenMon" 
                                        HorizontalAlignment="Center" 
                                        Padding="20,10" 
                                        Click="DownloadButton_Click"/>
                                        
                                <Button x:Name="RedownloadButton" 
                                        Content="Re-download OmenMon" 
                                        HorizontalAlignment="Center" 
                                        Padding="20,10" 
                                        Margin="0,10,0,0"
                                        Visibility="Collapsed"
                                        Click="DownloadButton_Click"/>
                            </StackPanel>
                            
                            <ProgressBar x:Name="DownloadProgress" 
                                         Visibility="Collapsed" 
                                         Margin="0,20,0,0" 
                                         Height="4"/>
                            
                            <TextBlock x:Name="DownloadStatus" 
                                       Text="" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,10,0,0" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Page 5: Ready to Start -->
                <StackPanel x:Name="Page5" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Opacity="0">
                    <StackPanel.RenderTransform>
                        <TranslateTransform X="30" Y="0"/>
                    </StackPanel.RenderTransform>
                    <TextBlock Text="Let's start!" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               TextWrapping="Wrap"
                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Setup is complete. You're ready to use HP Gaming Hub!" 
                               FontSize="18" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,40"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                </StackPanel>
                
                </Grid>
            </Border>
        </ScrollViewer>
        
        <!-- Navigation Bar -->
        <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="PreviousButton" 
                        Grid.Column="0" 
                        Content="Previous" 
                        Padding="20,8" 
                        IsEnabled="False"
                        Click="PreviousButton_Click"/>
                
                <!-- Page Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Ellipse x:Name="Dot1" Width="12" Height="12" Fill="{ThemeResource AccentFillColorDefaultBrush}" Margin="4"/>
                    <Ellipse x:Name="Dot2" Width="12" Height="12" Fill="{ThemeResource ControlFillColorDisabledBrush}" Margin="4"/>
                    <Ellipse x:Name="Dot3" Width="12" Height="12" Fill="{ThemeResource ControlFillColorDisabledBrush}" Margin="4"/>
                    <Ellipse x:Name="Dot4" Width="12" Height="12" Fill="{ThemeResource ControlFillColorDisabledBrush}" Margin="4"/>
                    <Ellipse x:Name="Dot5" Width="12" Height="12" Fill="{ThemeResource ControlFillColorDisabledBrush}" Margin="4"/>
                </StackPanel>
                
                <Button x:Name="NextButton" 
                        Grid.Column="2" 
                        Content="Next" 
                        Padding="20,8" 
                        Style="{StaticResource AccentButtonStyle}"
                        Click="NextButton_Click"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>